class Solution {
public:
    int numSubarrays(vector<int>& nums, int goal) {
        if(goal==-1)
           return 0;
        int ans=0;
        int n=nums.size();
        int left=0,r=0;
        int sum=0;
        while(r<n)
        {
           sum+=nums[r];
           
           while(sum>goal)
            { 
                sum-=nums[left];
                left++;
            }

           ans+=r-left+1 ;
            
            r++;
        }
        return ans;
    }
    int numSubarraysWithSum(vector<int>& nums, int goal) {
      return numSubarrays(nums,goal)-numSubarrays(nums,goal-1);
    }
};  space o(1)
